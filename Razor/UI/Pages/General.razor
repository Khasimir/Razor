@page "/"

<div class="row">
	<div class="col">
		<div class="border m-1 p-3">
			<p>Profiles</p>
			<select class="form-select form-select-sm">
				<option selected>Select a Profile...</option>
			</select>
			<button type="button" class="btn btn-sm btn-primary m-1">New</button>
			<button type="button" class="btn btn-sm btn-primary m-1">Save</button>
			<button type="button" class="btn btn-sm btn-primary m-1">Clone</button>
			<button type="button" class="btn btn-sm btn-primary m-1">Delete</button>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-2">
		<p>Show In:</p>
	</div>
	<div class="col-3">
		<div class="form-check">
			<input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
			<label class="form-check-label" for="flexRadioDefault1">
				Taskbar
			</label>
		</div>
	</div>
	<div class="col-3">
		<div class="form-check">
			<input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
			<label class="form-check-label" for="flexRadioDefault2">
				System Tray
			</label>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-2">
		<p>Language:</p>
	</div>
	<div class="col-6">
		<select class="form-select form-select-sm">
			<option selected></option>
		</select>
	</div>
</div>

